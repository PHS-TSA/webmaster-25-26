{
  "nodeModulesDir": "manual",
  "tasks": {
    "ci": {
      "dependencies": [
        "check:biome:ci",
        "check:deno:lint",
        "check:deno:fmt",
        "check:deno:types"
      ]
    },
    "ci:full": {
      "dependencies": ["ci", "build"]
    },
    "lint": {
      "dependencies": ["check:biome", "check:deno:lint"]
    },
    "fmt:check": {
      "dependencies": ["check:biome:fmt", "check:deno:fmt"]
    },
    "fmt": {
      "dependencies": ["fix:biome:fmt", "fix:deno:fmt"]
    },
    "check:biome": "deno run -A npm:@biomejs/biome check --formatter-enabled=false",
    "check:biome:ci": "deno run -A npm:@biomejs/biome ci",
    "check:biome:fmt": "deno run -A npm:@biomejs/biome format",
    "check:deno:lint": "deno lint",
    "check:deno:fmt": "deno fmt --check",
    "check:deno:types": "deno check",
    "fix": {
      "dependencies": ["fix:biome", "fix:deno:lint", "fix:deno:fmt"]
    },
    "fix:biome": "deno run -A npm:@biomejs/biome check --write --unsafe --formatter-enabled=false",
    "fix:biome:fmt": "deno run -A npm:@biomejs/biome format --write",
    "fix:deno:lint": "deno lint --fix",
    "fix:deno:fmt": "deno fmt",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": ["fresh"]
    }
  },
  "fmt": {
    "proseWrap": "preserve",
    "include": ["*.md", "*.yaml"]
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@/": "./",
    "@biomejs/biome": "npm:@biomejs/biome@^2.3.3",
    "@types/babel__core": "npm:@types/babel__core@^7.20.5",
    "daisyui": "npm:daisyui@^5.4.3",
    "fresh": "jsr:@fresh/core@^2.1.4",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.7",
    "vite": "npm:vite@^7.1.12",
    "tailwindcss": "npm:tailwindcss@^4.1.16",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.16"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
